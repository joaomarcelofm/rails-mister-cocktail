<div class="wrapper">
  <div class="banner-test">
  </div>
  <div class="container">
    <div class="cards row">
      <% @cocktails.each do |cocktail| %>
      <div class="card col-xs-12 col-md-4">
        <div class="card-wrapper">
         <div class="card-bg" style="background-image: url('<%= cl_image_path cocktail.photo, crop: :fill %>')"></div>
         <div class="card-body">
           <%= link_to cocktail.name, cocktail_path(cocktail) %>
         </div>
       </div>
     </div>
     <% end  %>
   </div>
 </div>
</div>


